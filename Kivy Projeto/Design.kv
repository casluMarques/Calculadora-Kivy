<Button>
    background_normal: ''
    background_color: (2/255, 10/255, 24/255,1)

<Calculadora>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height


        TextInput:
            id: input_text
            text: "0"
            font_size: 53
            multiline: False
            halign: "right"
            size_hint: (1, 0.20)
            background_color: (20/255, 20/255, 30/255)
            foreground_color: (1,1,1)
        
        
        GridLayout:
            cols: 4
            rows: 5
        ### linha 1 ###
            Button:
                text:"7"
                font_size: 32
                on_press: root.inserir_valor(7)
            Button:
                text:"8"
                font_size: 32
                on_press: root.inserir_valor(8)
            Button:
                text:"9"
                font_size: 32
                on_press: root.inserir_valor(9)
            Button:
                text:"/"
                font_size: 32
                background_color: (27/255, 80/255, 179/255, 1)
                on_press: root.sinais('/')
        ### linha 2 ###
            Button:
                text:"4"
                font_size: 32
                on_press: root.inserir_valor(4)
            Button:
                text:"5"
                font_size: 32
                on_press: root.inserir_valor(5)
            Button:
                text:"6"
                font_size: 32
                on_press: root.inserir_valor(6)
            Button:
                text:"x"
                font_size: 32
                background_color: (27/255, 80/255, 179/255, 1)
                on_press: root.sinais('*')
        ### linha 3 ###
            Button:
                text:"1"
                font_size: 32
                on_press: root.inserir_valor(1)
            Button:
                text:"2"
                font_size: 32
                on_press: root.inserir_valor(2)
            Button:
                text:"3"
                font_size: 32
                on_press: root.inserir_valor(3)
            Button:
                text:"+"
                font_size: 32
                background_color: (27/255, 80/255, 179/255, 1)
                on_press: root.sinais('+')
        ### linha 4 ###
            Button:
                text:"Del"
                font_size: 32
                background_color: (2/255, 14/255, 36/255,1)
                on_press: root.Del()
            Button:
                text:"0"
                font_size: 32
                on_press: root.inserir_valor(0)
            Button:
                text:"."
                font_size: 32
                background_color: (2/255, 14/255, 36/255,1)
                on_press: root.ponto()
            Button:
                text:"-"
                font_size: 32
                background_color: (27/255, 80/255, 179/255, 1)
                on_press: root.sinais('-')
        ### linha 5 ###
            Button:
                text:"C"
                font_size: 32
                background_color: (3/255, 28/255, 74/255, 1)
                on_press: root.clear()
            Button:
                text:"+/-"
                font_size: 32
                background_color: (3/255, 28/255, 74/255, 1)
                on_press: root.inverso()
            Button:
                text:"%"
                font_size: 32
                background_color: (3/255, 28/255, 74/255, 1)
                on_press: root.sinais('%')
            Button:
                text:"="
                font_size: 32
                background_color: (27/255, 80/255, 179/255, 1)
                on_press: root.calcular()